<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9D9D0"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Ingrese su nombre"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Surnames"
        app:layout_constraintStart_toStartOf="@+id/cabeza"
        app:layout_constraintTop_toBottomOf="@+id/cabeza" />

    <EditText
        android:id="@+id/Surnames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Ingrese su apellido"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cellphone"
        app:layout_constraintStart_toStartOf="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        android:id="@+id/cellphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Ingrese su telefono"
        android:textColor="@color/black"

        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/emile"
        app:layout_constraintStart_toStartOf="@+id/Surnames"
        app:layout_constraintTop_toBottomOf="@+id/Surnames" />

    <EditText
        android:id="@+id/emile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Password"
        app:layout_constraintStart_toStartOf="@+id/cellphone"
        app:layout_constraintTop_toBottomOf="@+id/cellphone" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Password"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Registro"
        app:layout_constraintEnd_toEndOf="@+id/emile"
        app:layout_constraintTop_toBottomOf="@+id/emile" />

    <TextView
        android:id="@+id/cabeza"
        android:layout_width="208dp"
        android:layout_height="0dp"

        android:layout_marginTop="85dp"
        android:layout_marginBottom="35dp"
        android:text="Registro"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/Registro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="111dp"
        android:backgroundTint="#387373"
        android:text="Registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

    <Button

        android:id="@+id/volver"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#387373"
        android:text="Volver"
        app:layout_constraintEnd_toStartOf="@+id/cabeza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>